{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "indent": [1, 4],
        "import/extensions": ["error", { "js": "always", "json": "never" }],
        "no-undef": 1,
        "quotes": [1, "double"],
        "no-plusplus": 0,
        "no-continue": 0,
        "no-underscore-dangle": 0,
        "no-console": 0
    }
}
